<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Phil Curnow</Authors>
    <Copyright>Copyright 2020 Phil Curnow</Copyright>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SignAssembly>false</SignAssembly>
    <DelaySign>false</DelaySign>
    <Description>Legacy Actionable Message Card Class to enable easier creation of actionable message cards using objects instead of having to build JSON strings within your code.</Description>
    <RepositoryUrl>https://github.com/phil-curnow/Curnow.biz.MessageCard.git</RepositoryUrl>
    <PackageTags>MessageCard, Legacy Message Card, Teams, Actionable Card</PackageTags>
    <PackageProjectUrl>https://github.com/phil-curnow/Curnow.biz.MessageCard.git</PackageProjectUrl>
    <PackageReleaseNotes>First Release of library</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Actions\" />
    <Folder Include="Inputs\" />
    <Folder Include="Section\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
